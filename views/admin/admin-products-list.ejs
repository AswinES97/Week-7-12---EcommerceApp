
<body>
    <div class="screen-overlay"></div>
    <main class="main-wrap">
        <header class="main-header navbar">
            <div class="col-search">
            </div>
            <div class="col-nav">        
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link btn-icon darkmode" href="#">
                            <i class="material-icons md-nights_stay"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="requestfullscreen nav-link btn-icon"><i class="material-icons md-cast"></i></a>
                    </li>
                </ul>
            </div>
        </header>
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Products List</h2>
                </div>
                <!-- <div>
                    <a href="#" class="btn btn-light rounded font-md">Export</a>
                    <a href="#" class="btn btn-light rounded  font-md">Import</a>
                    <a href="#" class="btn btn-primary btn-sm rounded">Create new</a>
                </div> -->
            </div>
            <div class="card mb-4">
                <header class="card-header">
                    <div class="row gx-3 my-3">
                        <div class="col-lg-4 col-md-6 me-auto">
                            <input type="text" placeholder="Search Product.."  id="search" class="form-control">
                            <span id="search-err" style="color: red;" hidden>Invalid</span>
                        </div>
                    </div>
                    <div class="row align-items-center">
                        <div class="col col-check flex-grow-0">
                            <div class="form-check ms-2">
                                <span>No.</span>
                            </div>
                        </div>
                        <div class="col-md-4 col-3 ms-auto mb-md-0 mb-3">
                            <span class=" ms-5"><i>Product Name</i></span>
                        </div>
                        <div class="col-md-2 col-4 me-auto mb-md-0 mb-2">
                            <span>Price</span>
                        </div>
                        <div class="col-md-2 col-2 ms-auto">
                            <span ><b>Status</b></span>
                        </div>
                        <div class="col-md-3 col-2 ms-auto">
                            <span><b>Quantity</b></span>
                        </div>

                    </div>
                </header> <!-- card-header end// -->
                <div class="card-body" id="product-card-admin">
                    <%if(hasProducts){%>
                        <% for(i=0;i<data.length;i++){%>
                        <article class="itemlist">
                            <div class="row align-items-center">
                                <div class="col col-check flex-grow-0">
                                    <div class="form-check">
                                        <span><%=i+1%></span>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-sm-4 col-8 flex-grow-1 col-name">
                                    <a class="itemside" href="#">
                                        <div class="left">
                                            <img src="<%=data[i].image[0]%>" class="img-sm img-thumbnail" alt="Item">
                                        </div>
                                        <div class="info">
                                            <h6 class="mb-0"><%=data[i].name.substring(0,20)%>...</h6>
                                        </div>
                                    </a>
                                </div>
                                <div class="col-lg-2 col-sm-2 col-4 col-price "> <span><%=data[i].price%></span> </div>
                                <div class="col-lg-2 col-sm-2 col-4 col-status">
                                    <%if(data[i].active){%>
                                    <span class="badge rounded-pill alert-success">Active</span>
                                    <%}else{%>
                                    <span class="badge rounded-pill alert-danger">Disabled</span>
                                    <%}%>
                                </div>
                                <div class="col-lg-1 col-sm-2 col-4 col-date">
                                    <span class="ms-4"><%=data[i].quantity.quantity%></span>
                                </div>
                                <div class="col-lg-2 col-sm-2 col-4 col-action text-end">
                                    <a href="/v1/admin/products/<%=data[i].pId%>" class="btn btn-sm font-sm rounded btn-brand">
                                        <i class="material-icons md-edit"></i> Edit
                                    </a>
                                    <a href="#" onclick="deleteProduct(event,'<%=data[i].pId%>' )" class="btn btn-sm font-sm btn-light rounded">
                                        <i class="material-icons md-delete_forever"></i> Delete
                                    </a>
                                </div>
                            </div> <!-- row .// -->
                        </article> <!-- itemlist  .// -->
                        <%}%>
                </div> <!-- card-body end// -->
            </div> <!-- card end// -->
        <%if(buttonLength>1){%>
            <div class="pagination-area mt-15 mb-50" id="pagination">
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-start">
                        <%for(let i=0; i<buttonLength; i++){%>
                        <li class="page-item active" onclick="pagination(event,'<%=i%>')"><a class="page-link" href="#"><%=i+1%></a></li>
                        <%}%>
                        <!-- <li class="page-item"><a class="page-link" href="#"><i
                                    class="material-icons md-chevron_right"></i></a></li> -->
                    </ul>
                </nav>
            </div>
        <%}}%>    
        </section> <!-- content-main end// -->
        <footer class="main-footer font-xs">
            <div class="row pb-30 pt-15">
                <div class="col-sm-6">
                    <script>
                    document.write(new Date().getFullYear())
                    </script> Â©, Punch .
                </div>
                <div class="col-sm-6">
                    <div class="text-sm-end">
                        All rights reserved
                    </div>
                </div>
            </div>
        </footer>
    </main>
   
</body>

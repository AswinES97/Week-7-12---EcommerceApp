<nav>
    <ul class="menu-aside">

    </ul>
</nav>
<main class="main-wrap">
    <section class="content-main">
        <div class="content-header">
            <div>
                <h2 class="content-title card-title">Order List </h2>
                <p>All Orders</p>
            </div>
            <div>
                <input type="text" placeholder="Search order ID" class="form-control bg-white">
            </div>
        </div>
        <div class="card mb-4">
            <header class="card-header">
                <div class="row gx-3">
                    <div class="col-lg-4 col-md-6 me-auto">
                        <input type="text" placeholder="Search..." class="form-control">
                    </div>
                    <div class="col-lg-2 col-6 col-md-3">
                        <select class="form-select">
                            <option>Status</option>
                            <option>Active</option>
                            <option>Disabled</option>
                            <option>Show all</option>
                        </select>
                    </div>
                    <div class="col-lg-2 col-6 col-md-3">
                        <select class="form-select">
                            <option>Show 20</option>
                            <option>Show 30</option>
                            <option>Show 40</option>
                        </select>
                    </div>
                </div>
            </header> <!-- card-header end// -->
            <div class="card-body">
                <%if(isOrders){%>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">No.</th>
                                <th>#ID</th>
                                <th scope="col">Total</th>
                                <th scope="col">Status</th>
                                <th scope="col">Date</th>
                                <th scope="col">Payment Status</th>
                                <th scope="col" class="text-end"> Action </th>
                            </tr>
                        </thead>
                        <tbody id="order-table">
                            <%for(let i=0;i<orders.length;i++){%>
                            <tr>
                                <td><%=i+1%></td>
                                <td><%=orders[i].orderId%></td>
                                <td><%=orders[i].totalPrice%></td>
                                <%if(orders[i].orderStatus == 'Delivered'){%>
                                    <td><span class="badge rounded-pill alert-success"><%=orders[i].orderStatus%></span></td>
                                <%}else{%>
                                <td><span class="badge rounded-pill alert-warning"><%=orders[i].orderStatus%></span></td>
                                <%}%>
                                <td><%=orders[i].createdAt%></td>
                                <td><b class="badge rounded-pill alert-warning"><%=orders[i].payment_status%></b></td>
                                <td class="text-end">
                                    <a href="/v1/admin/orders/single?oId=<%=orders[i].orderId%>" class="btn btn-md rounded font-sm">Detail</a>
                                </td>
                            </tr>
                            <%}%>
                        </tbody>
                    </table>
                </div> <!-- table-responsive //end -->
            </div> <!-- card-body end// -->
        </div> <!-- card end// -->
        <%if(isOrders){%>
        <div class="pagination-area mt-15 mb-50">
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-start">
                    <%for(let i=0; i<buttonLength; i++){%>
                    <li class="page-item active" onclick="pagination(event,'<%=i%>')"><a class="page-link" href="#"><%=i+1%></a></li>
                    <%}%>
                    <!-- <li class="page-item"><a class="page-link" href="#"><i
                                class="material-icons md-chevron_right"></i></a></li> -->
                </ul>
            </nav>
        </div>
        <%}%>
        <%}else{%>
            <%}%>
    </section>
</main>
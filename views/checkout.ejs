<div class="modal fade" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="staticBackdropLabel" aria-hidden="true" id="staticBackdrop" id="address-modal">
    <div class="modal-dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Add new address</h1>
                    <button type="button" class="btn-close"  data-bs-dismiss="modal"
                        aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="card mx-auto card-login">
                        <div class="card-body">
                            <form id="address-form">
                                <div class="mb-3">
                                    <label class="form-label">Name*</label>
                                    <input class="form-control" placeholder="full name" type="text" name="name"
                                        id="form-name-field" required>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Address*</label>
                                    <div class="row gx-2">
                                        <div class="col-8">
                                            <input class="form-control" placeholder="full address" type="text"
                                                name="address1" required id="form-address1-field">
                                        </div>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Address2</label>
                                    <div class="row gx-2">
                                        <div class="col-8">
                                            <input class="form-control" placeholder="full address" type="text"
                                                name="address2" id="form-address2-field">
                                        </div>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">City*</label>
                                    <input class="form-control" placeholder="city" type="text" name="city" required
                                        id="form-city-field">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">State*</label>
                                    <input class="form-control" placeholder="state" type="text" name="state" required
                                        id="form-state-field">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Country*</label>
                                    <input class="form-control" placeholder="country" type="text" name="country"
                                        required id="form-country-field">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Pin Code*</label>
                                    <input class="form-control" placeholder="pin-code" type="text" name="postal_code"
                                        required id="form-pincode-field">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Phone*</label>
                                    <input class="form-control" placeholder="phone" type="tel" name="phone" required
                                        id="form-phone-field">
                                </div>
                            </form>


                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary"  data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" id="form-save-field"
                       >Save</button>
                </div>
                </form>

            </div>
        </div>
    </div>
</div>


<main class="main">
    <div class="page-header breadcrumb-wrap">
        <div class="container">
            <div class="breadcrumb">
                <a href="index.html" rel="nofollow">Home</a>
                <span></span> Shop
                <span></span> Checkout
            </div>
        </div>
    </div>
    <section class="mt-50 mb-50">
        <div class="container">
            <div class="row">
            </div>
            <div class="row" id="address-tab-body">
                <div class="col-md-6">
                    <%if(addressLength != 0){%>
                    <h4>Select An address</h4>
                    <% address.forEach(ele=>{%>
                    <div class="card mb-3 mb-lg-0" id="<%=ele.addressId%>">
                            <div class="card-body">
                                <div>
                                    <input style="height: 1em;width: 1em;" type="radio" name="address" value="<%=ele.addressId%>" checked>
                                </div>
                                <h4><%=ele.name%></h4>
                                <address><%=ele.address1%> <%=ele.city%> ,<%=ele.state%> <%=ele.country%>, <%=ele.postal_code%></address>
                                <address><%=ele.phone%></address>
                            </div>
                            
                            <button onclick="editaddress('<%=ele.addressId%>','checkout')" class="btn">Edit</button>
                    </div>
                    <%})%>
                    <%}else{%>
                        <button class="btn" onclick="clearmodel('checkout')">Add New Address</button>
                    <%}%>
                </div>
                <div class="col-md-6">
                    <div class="order_review">
                        <div class="mb-20">
                            <h4>Your Orders</h4>
                        </div>
                        <div class="table-responsive order_table text-center">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th colspan="2">Product</th>
                                        <th>Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <%products.forEach(ele=>{%>
                                    <tr>
                                        <td class="image product-thumbnail"><img src="<%=ele.productDetails[0].image[0]%>" alt="#"></td>
                                        <td>
                                            <h5><a href="#"><%=ele.productDetails[0].name.substring(0,30)%>...</a></h5> <span class="product-qty">x<%=ele.product.quantity%></span>
                                        </td>
                                        <td><%=ele.product.subTotal%></td>
                                    </tr>
                                    <%})%>
                                        <th>SubTotal</th>
                                        <td class="product-subtotal" colspan="2"><%=grandTotal%></td>
                                    </tr>
                                    <tr>
                                        <th>Shipping</th>
                                        <td colspan="2"><em>Free Shipping</em></td>
                                    </tr>
                                    <tr>
                                        <th>Total</th>
                                        <td colspan="2" class="product-subtotal"><span class="font-xl text-brand fw-900"><%=grandTotal%></span></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="bt-1 border-color-1 mt-30 mb-30"></div>
                        <div class="payment_method">
                            <div class="mb-25">
                                <h5>Payment</h5>
                            </div>
                            <div class="payment_option">
                                <div class="custome-radio">
                                    <input class="form-check-input" required="" type="radio" name="payment_option" id="exampleRadios3" checked="" value="Razorpay">
                                    <label class="form-check-label" for="exampleRadios3" >Razorpay</label>
                                </div>
                                <div class="custome-radio">
                                    <input class="form-check-input" required="" type="radio" name="payment_option" id="exampleRadios4" checked="" value="cod">
                                    <label class="form-check-label" for="exampleRadios4" >COD</label>
                                    
                                </div>
                                <!-- <div class="custome-radio">
                                    <input class="form-check-input" required="" type="radio" name="payment_option" id="exampleRadios5" checked=""value='paypal'>
                                    <label class="form-check-label" for="exampleRadios5" data-bs-toggle="collapse">Paypal</label>
                        
                                </div> -->
                            </div>
                        </div>
                        <a href="#" id="placeorder" class="btn btn-fill-out btn-block mt-30">Place Order</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
<script src="https://checkout.razorpay.com/v1/checkout.js"></script>